{
  "name": "Magic Bookmark",
  "version": "0.1.0",
  "description": "Magically link a tab to a bookmark",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
   "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {},
  "permissions": [
    "webNavigation",
    "storage",
    "bookmarks",
    "tabs"
  ]
}